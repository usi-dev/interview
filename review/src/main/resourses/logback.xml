<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%yellow(%d{mm:ss.SSS}) %highlight(%-5level) %magenta([%-33thread]) %cyan([%35.35logger{35}.%3line]) - %highlight(%msg%n)</pattern>
        </encoder>
    </appender>

    <root level="info">
         <appender-ref ref="STDOUT"/>
    </root>


    <logger name="org.springframework" level="info"/>


</configuration>